{
  "name": "surface",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:docker": "bun run --bun vite",
    "build": "tsr generate && vite build && cp -r views/assets/* build/assets/",
    "build:node": "npm run build && rollup -c rollup.config.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start:node": "cross-env NODE_ENV=production DEBUG=surface:* node dist/surface.server.node.js",
    "start:bun": "NODE_ENV=production bun surface.server.bun.ts",
    "start:bun:dev": "NODE_ENV=production bun --watch surface.server.bun.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@tanstack/react-router": "^1.115.0",
    "@tanstack/react-start": "^1.115.1",
    "@tanstack/router-plugin": "^1.115.0",
    "bunyan": "^1.8.15",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "hono": "^4.7.5",
    "install": "^0.13.0",
    "lucide-react": "^0.366.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslog": "^4.9.3",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.10.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tanstack/react-router-devtools": "^1.115.0",
    "@tanstack/router-cli": "^1.28.2",
    "@types/bun": "^1.0.12",
    "@types/debug": "^4.1.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "glob": "^10.3.12",
    "postcss": "^8.4.38",
    "rollup": "^4.14.1",
    "rollup-plugin-ignore-import": "^1.3.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "6.0.0"
  }
}
